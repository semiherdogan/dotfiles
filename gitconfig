[user]
    name = Semih ERDOGAN
    email = hasansemiherdogan@gmail.com
[github]
  user = semiherdogan
[core]
    editor = vi
    excludesfile = "~/dotfiles/gitignore_global"
    autocrlf = input
[color]
    ui = auto
[push]
    default = current
[alias]
    s = status --show-stash
    sb = s -sb
    a = add
    aa = a .
    c = commit -m
    p = pull
    h = push
    co = checkout
    l = log --decorate --graph
    b = !sh -c 'git branch -a | cat'
    wip =  commit -am 'wip'
    aliases = !sh -c 'git config -l | grep alias | cut -c 7-'
    name-of-current-branch = symbolic-ref --short HEAD
    rename-branch = branch -m
    publish = !git push -u origin $(git name-of-current-branch)
    forget = !git fetch -pq && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D
    create-branch = !sh -c 'git fetch -pq && git checkout -b $2 --no-track origin/$1' -
    reset-soft = reset --soft HEAD~1
    reset-hard = reset --hard HEAD~1
    export = !git archive --format zip --output project.zip $(git name-of-current-branch)
    unset-upstream = branch --unset-upstream
    set-upstream-to-current-branch = !git branch --set-upstream-to=origin/$(git name-of-current-branch) $(git rev-parse --abbrev-ref HEAD)
    last-commit-diff = diff HEAD@{1}
    nah = !git reset --hard && git clean -df
    log1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    log2 = log --pretty=format:'%Cred|%Creset %<(12,trunc)%cr %Cred|%Creset %<(15,trunc)%aN %Cred|%Creset %<(50,trunc)%s %Cgreen|%Creset %h %Cgreen|%Creset %cd %Cgreen|%Creset' --abbrev-commit --date=format:'%Y-%m-%d %H:%M:%S'
    undo=reset --soft HEAD^ #Â undo last local commit!
    changes=diff --name-status -r
    diffstat=diff --stat -r
    sortdiff = !sh -c 'git diff "$@" | grep "^[+-]" | sort --key=1.2 | uniq -u -s1'
    new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
    latest-tag = !sh -c 'git fetch -pq && git describe --tags $(git rev-list --tags --max-count=1)'
    branch-authors = for-each-ref --format='%(color:cyan)%(authordate:format:%Y-%m-%d %H:%M)   %(align:23,left)%(color:yellow)%(authorname)%(end) %(color:reset)%(refname:strip=3)' --sort=authordate refs/remotes
    yolo = !curl -s whatthecommit.com/index.txt
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
